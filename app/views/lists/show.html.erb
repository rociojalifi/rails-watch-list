<div class="position-relative container">
  <div class="card-category card-large">
    <h1><%= @list.name %></h1>
  </div>
  <div class="container mb-5">
    <div class="d-flex justify-content-between my-4">
      <span class="mb-2 d-block"
        ><small
          ><em class="text-muted"
            ><%= "You haven't saved any movies yet!" if @list.movies.empty?
            %></em
          ></small
        ></span
      >
      <div>
        <button
          type="button"
          class="btn btn-flat"
          data-toggle="modal"
          data-target="#new_movie_modal"
        >
          add a movie
        </button>
        <%= link_to 'delete this list', list_path(@list), method: :delete,
        class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to
        delete this list?' } %>
      </div>
    </div>
  </div>
</div>
